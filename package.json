{
  "name": "wxt-svelte-starter",
  "description": "manifest.json description",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:edge": "wxt -b edge",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:edge": "wxt build -b edge",
    "build:wasm": "wasm-pack build --target web --out-dir wasm-pack --out-name index",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:edge": "wxt zip -b edge",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest tests/services tests/components tests/config",
    "test:integration": "vitest tests/integration",
    "test:webrtc": "bun test tests/entrypoints/offscreen/webrtc.*.test.ts",
    "clean": "rm -rf dist .wxt",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^5.0.4",
    "@types/bun": "^1.2.17",
    "@types/chrome": "^0.0.326",
    "@types/node": "^24.0.3",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@wxt-dev/module-svelte": "^2.0.3",
    "jsdom": "^26.1.0",
    "svelte": "^5.34.7",
    "svelte-check": "^4.2.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "wxt": "^0.20.7"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "tailwindcss": "^4.1.10",
    "tonkotsu": "^1.0.17",
    "ts-pattern": "^5.7.1",
    "uuid": "^11.1.0",
    "viem": "^2.31.3",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-plugin-wasm": "^3.4.1"
  }
}
